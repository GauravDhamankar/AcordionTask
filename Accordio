    <script>

        let myTable = document.getElementById("myTable");

        let arr = localStorage.getItem("personal_info")
            ? JSON.parse(localStorage.getItem("personal_info"))
            : [];
        // console.log(arr[0].fname, arr[0].lname, arr[0].email);

        function insertRowIntoTable() {
            let table = `<table id="myTable" class="table table-hover table-responsive table-success shadow-lg p-3  bg-body-tertiary rounded">`;

            table += `<thead class="table-warning">
                         <tr>
                             <th scope="row">First Name</th>
                             <th scope="row">Last Name</th>
                             <th scope="row">Email</th>
                             <th scope="row">Action</th>
                         </tr>
                    </thead>`;

            arr.forEach((item, index) => {
                table += `<tr>`;
                // table += `<td>${index}</td>`;
                table += `<td>${item.fname}</td>`;
                table += `<td>${item.lname}</td>`;
                table += `<td>${item.email}</td>`;
                table += `<td><button type="button" class="btn btn-primary btn-sm" onclick="viewData(${index})">View</button><button class="btn btn-danger btn-sm mx-1" onclick="deleteData(this)">Delete</button></td>`;
                table += `</tr>`;
            });

            table += `</table>`;

            document.getElementById("empDetails").innerHTML = table;
        }

        insertRowIntoTable();

        // View Data into multiple table
        function viewData(rowNum) {

            let second_table = document.getElementById("second_table");
            second_table.style.display = "block";

            let finalRow = rowNum;

            let personal = JSON.parse(localStorage.getItem("personal_info"));
            let emp_info = JSON.parse(localStorage.getItem("emp_info"));
            let acc_info = JSON.parse(localStorage.getItem("acc_info"));
            let family_info = JSON.parse(localStorage.getItem("family_info"));
            let assets_info = JSON.parse(localStorage.getItem("assets_info"));

            // Personal Details displaying in Table
            document.getElementById("first_name").innerHTML =
                personal[finalRow].fname;
            document.getElementById("mid_name").innerHTML =
                personal[finalRow].mname;
            document.getElementById("last_name").innerHTML =
                personal[finalRow].lname;
            document.getElementById("mobile").innerHTML = personal[finalRow].tel;
            document.getElementById("email").innerHTML = personal[finalRow].email;
            document.getElementById("address1").innerHTML = personal[finalRow].add1;
            document.getElementById("city").innerHTML = personal[finalRow].city;
            // document.getElementById('address2').innerHTML = personal[finalRow].add2;

            // Account Details displaying in table
            document.getElementById("bank_name").innerHTML =
                acc_info[finalRow].brname;
            document.getElementById("branch").innerHTML = acc_info[finalRow].brloc;
            document.getElementById("zip").innerHTML = acc_info[finalRow].zip;
            document.getElementById("adhar").innerHTML = acc_info[finalRow].adhar;
            document.getElementById("pan").innerHTML = acc_info[finalRow].pan;
            document.getElementById("acc_num").innerHTML =
                acc_info[finalRow].accNum;
            document.getElementById("ifsc_code").innerHTML =
                acc_info[finalRow].ifsc;

            // Family Details displaying in table
            document.getElementById("ffname").innerHTML =
                family_info[finalRow].ffname;
            document.getElementById("flname").innerHTML =
                family_info[finalRow].flname;
            document.getElementById("fmob").innerHTML = family_info[finalRow].fmob;
            document.getElementById("mfname").innerHTML =
                family_info[finalRow].mfname;
            document.getElementById("mlname").innerHTML =
                family_info[finalRow].mlname;
            document.getElementById("mmob").innerHTML = family_info[finalRow].mmob;
            document.getElementById("addr").innerHTML = family_info[finalRow].addr;

            // Employment Details displaying in table
            document.getElementById("cpname").innerHTML = emp_info[finalRow].cpname;
            document.getElementById("cpaddr").innerHTML = emp_info[finalRow].cpaddr;
            document.getElementById("jobrole").innerHTML =
                emp_info[finalRow].jobrole;
            document.getElementById("expr").innerHTML = emp_info[finalRow].expr;
            document.getElementById("skills").innerHTML = emp_info[finalRow].skills;
            document.getElementById("currentCTC").innerHTML =
                emp_info[finalRow].currentCTC;
            document.getElementById("expectCTC").innerHTML =
                emp_info[finalRow].expectCTC;

            // Assets details displaying in table
            document.getElementById("curriculam").innerHTML =
                assets_info[finalRow].curriculam;
            document.getElementById("softskill").innerHTML =
                assets_info[finalRow].softskill;
            document.getElementById("about").innerHTML =
                assets_info[finalRow].about;
        }

        // personal Check new
        function personalCheck() {
            let searchvalue = document.getElementById("searchvalue").value;

            // console.log(searchvalue);

            let personal_info = localStorage.getItem("personal_info")
                ? JSON.parse(localStorage.getItem("personal_info"))
                : [];

            let table = `<table id="myTable" class="table table-hover table-responsive table-success shadow-lg p-3  bg-body-tertiary rounded">
                            <thead class="table-warning">
                                <tr>
                                    <th scope="row">First Name</th>
                                    <th scope="row">Last Name</th>
                                    <th scope="row">Email</th>
                                    <th scope="row">Action</th>
                                </tr>
                           </thead>`;

            let tbody = "";

            personal_info.map((item, index) => {
                // console.log(item);

                let first_name = item.fname;
                let searchvalue2 = new RegExp(searchvalue, "gi");

                if (searchvalue2.test(first_name)) {
                    // console.log(first_name);
                    tbody += `<tr>
                        <td>${item.fname}</td>
                        <td>${item.lname}</td>
                        <td>${item.email}</td>
                        <td><button type="button" class="btn btn-primary btn-sm" onclick="viewData(${index})">View</button></td>
                        </tr>`;
                }

                let finalTable = table + tbody + "</table>";

                document.getElementById("empDetails").innerHTML = finalTable;
            });
        }


        function deleteData(rowNum) {
            
        }
    </script>

